<div class="container">
<h1>Edit Profile</h1>
<div class="col-xs-6 edit-profile">
    <%= form_for @user do |f| %>
      <div class="container well col-xs-12 small-container">
        <div class="bold col-xs-12">
          <label for="avatar">Profile Picture</label>
          <%= f.file_field :avatar, class: "update-pic" %>
        </div>
      <div class="bold col-xs-12">
        <label for="email">Email</label>
    		  <%= f.email_field :email, class: "form-control"%>
        </div>
        <div class="bold col-xs-12">
          <label for="fav_food">Favorite Food</label>
    		    <%= f.text_field :fav_food, class: "form-control" %>
        </div>
        <div class="bold col-xs-12">
          <label for="fav_workout">Favorite Workout</label>
    		    <%= f.text_field :fav_workout, class: "form-control" %>
        </div>
        <div class="col-xs-12 update-profile">
        <%= f.submit "Update Profile", class: "btn btn-primary" %>
      </div>
      <% end %>
  </div>
</div>
